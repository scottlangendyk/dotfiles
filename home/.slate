config nudgePercentOf screenSize
config resizePercentOf screenSize

alias fullscreen0 throw 0 resize:screenSizeX;screenSizeY
alias fullscreen1 throw 1 resize:screenSizeX;screenSizeY

bind f5 sequence ${fullscreen1} > ${fullscreen0}
bind f6 ${fullscreen1}

bind right:alt chain push right bar-resize:screenSizeX/2 | push right bar-resize:screenSizeX/3 | push right bar-resize:screenSizeX/4
bind left:alt chain push left bar-resize:screenSizeX/2 | push left bar-resize:screenSizeX/3 | push left bar-resize:screenSizeX/4
bind up:alt chain push top bar-resize:screenSizeY/2 | push top bar-resize:screenSizeY/3 | push top bar-resize:screenSizeY/4
bind down:alt chain push bottom bar-resize:screenSizeY/2 | push bottom bar-resize:screenSizeY/3 | push bottom bar-resize:screenSizeY/4
